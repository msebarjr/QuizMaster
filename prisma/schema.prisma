generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], name: "userId")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "userId")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  Quiz          Quiz[]
}

enum QuizType {
  mcq
  open_ended
}

// Quiz has 1 User and User has many games
model Quiz {
  id          String     @id @default(cuid())
  userId      String
  timeStarted DateTime
  timeEnded   DateTime?
  quizType    QuizType
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade) // Links Quiz Model to User via relation field
  questions   Question[]

  @@index([userId], name: "userId")
}

// Qame has many questions but each question only 1 Quiz
model Question {
  id             String   @id @default(cuid())
  question       String
  answer         String
  quizId         String
  options        Json? // only for mcq - array
  isCorrect      Boolean? // only for mcq
  percentCorrect Float? // only for open_ended
  questionType   QuizType
  userAnswer     String?

  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId], name: "quizId")
}
